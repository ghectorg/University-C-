<Window x:Class="UniversityWPF.Views.ListDocument"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UniversityWPF.Views"
        mc:Ignorable="d"
        Title="ListDocument" Height="450" Width="800">
    <Grid>
        <Label Content="Lista de Documentos" HorizontalAlignment="Left" Margin="270,30,0,0" VerticalAlignment="Top" FontSize="24" FontWeight="Bold"/>
        <DataGrid x:Name="datagridDocuments" HorizontalAlignment="Left" Height="215" Margin="95,95,0,0" VerticalAlignment="Top" Width="595">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID Documento"  Binding="{Binding id}"/>
                <DataGridTextColumn Header="Codigo"  Binding="{Binding code}"/>
                <DataGridTextColumn Header="Nombre"  Binding="{Binding name}"/>
                <DataGridTextColumn Header="Descripcion"  Binding="{Binding descrip}"/>

            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="MostrarBtn" Content="Mostrar todos" HorizontalAlignment="Left" Margin="95,340,0,0" VerticalAlignment="Top" Width="160" FontSize="18" FontWeight="Bold" Height="45" Click="MostrarBtn_Click"/>
        <ComboBox HorizontalAlignment="Left" Margin="315,340,0,0" VerticalAlignment="Top" Width="170" Height="45" FontSize="18" FontWeight="Bold">
            <Button Content="Nombre"/>
            <Button Content="Codigo"/>
            <Button Content="ID"/>
            <ComboBoxItem IsSelected="True">Buscar</ComboBoxItem>
        </ComboBox>
        <Button x:Name="EdicionBtn" Content="Edicion" HorizontalAlignment="Left" Margin="550,340,0,0" VerticalAlignment="Top" Width="140" Height="45" FontSize="18" FontWeight="Bold" Click="EdicionBtn_Click"/>

    </Grid>
</Window>
