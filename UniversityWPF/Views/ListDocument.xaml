<Window x:Class="UniversityWPF.Views.ListDocument"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UniversityWPF.Views"
        mc:Ignorable="d"
        Title="ListDocument" Height="450" Width="800">
    <Grid>
        <Label Content="Lista de Documentos" HorizontalAlignment="Left" Margin="270,30,0,0" VerticalAlignment="Top" FontSize="24" FontWeight="Bold"/>
        <DataGrid x:Name="datagridDocuments" HorizontalAlignment="Left" Height="140" Margin="95,95,0,0" VerticalAlignment="Top" Width="595"/>
        <Button x:Name="MostrarBtn" Content="Mostrar todos" HorizontalAlignment="Left" Margin="300,340,0,0" VerticalAlignment="Top" Width="160" FontSize="18" FontWeight="Bold" Height="45" Click="MostrarBtn_Click"/>
        <Button x:Name="BuscarBtn" Content="Buscar" HorizontalAlignment="Left" Margin="590,266,0,0" VerticalAlignment="Top" Width="100" FontSize="18" FontWeight="Bold" Height="45" Click="BuscarBtn_Click"/>
        <Label Content="ID" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="185,269,0,0" FontSize="18" FontWeight="Bold" Height="42"/>
        <TextBox x:Name="idBuscar" HorizontalAlignment="Left" Height="42" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="295" Margin="255,269,0,0" FontSize="18"/>

    </Grid>
</Window>
