<Window x:Class="UniversityWPF.Forms.FormInscription"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UniversityWPF.Forms"
        mc:Ignorable="d"
        Title="Inscripciones" Height="312" Width="622">
    <Grid>
        <Label Content="Curso" HorizontalAlignment="Left" Margin="117,133,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Label Content="Persona" HorizontalAlignment="Left" Margin="117,74,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Button x:Name="CrearBtn" Click="CrearBtn_Click"
            Content="Crear" HorizontalAlignment="Left" Margin="117,208,0,0" VerticalAlignment="Top" Width="110" FontSize="14" FontWeight="Bold" Height="43"/>
        <Button x:Name="editBtn" Click="EditBtn_Click" 
            Content="Editar" HorizontalAlignment="Left" Margin="117,208,0,0" VerticalAlignment="Top" Width="110" FontSize="14" FontWeight="Bold" Height="43"/>
        <Button x:Name="ClearBtn" Click="ClearBtn_Click" 
            Content="Limpiar" HorizontalAlignment="Left" Margin="408,208,0,0" VerticalAlignment="Top" Width="110" FontSize="14" FontWeight="Bold" Height="43"/>
        <ComboBox x:Name="namePersons_txt"
            HorizontalAlignment="Left" Margin="198,71,0,0" VerticalAlignment="Top" Width="320" FontSize="14">

        </ComboBox>
        <ComboBox x:Name="nameCursos_txt"
            HorizontalAlignment="Left" Margin="198,137,0,0" VerticalAlignment="Top" Width="320" FontSize="14">
            
        </ComboBox>
        <CheckBox x:Name="isActivo_Check"
            Content="Activo" HorizontalAlignment="Left" Margin="282,28,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="namePersonBlock_txt"
            HorizontalAlignment="Left" Margin="198,71,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="25" Width="305" FontSize="14"/>
    </Grid>
</Window>
