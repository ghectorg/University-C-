            Content="Limpiar" HorizontalAlignment="Left" Margin="589,336,0,0" VerticalAlignment="Top" Width="104" Height="38" FontSize="14" FontWeight="Bold"/>
        <CheckBox x:Name="isActivo_Check"
            Content="Activo" HorizontalAlignment="Left" Margin="353,50,0,0" VerticalAlignment="Top" Height="25" Width="116"/>

    </Grid>
</Window>
